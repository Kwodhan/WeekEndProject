<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>



		<!-- File Appender -->
		<File name="File" fileName="~/Log.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss a} %-5level %logger{36} - %msg%n" />
		</File>

	</Appenders>
	<Loggers>


		<!-- Log SQL statements -->
		<Logger name="org.hibernate.SQL" level="debug" additivity="false">

			<AppenderRef ref="File" />
		</Logger>

		<!-- Log JDBC bind parameters -->
		<Logger name="org.hibernate.type.descriptor.sql" level="trace"
			additivity="false">

			<AppenderRef ref="File" />
		</Logger>

		<!-- Log custom packages -->
		<Logger name="fr.istic.taa.weekEndProject" level="debug"
			additivity="false">

			<AppenderRef ref="File" />
		</Logger>

		<Root level="error">

			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>